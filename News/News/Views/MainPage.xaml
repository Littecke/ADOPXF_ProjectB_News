<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:News.Views" 
             x:Class="News.Views.MainPage">
            
    <!--Pages can be added as references or inline-->
    <TabbedPage.Children>
        <views:AboutPage />
        <views:ConsolePage />
        <views:NewsPage Title="Business" BackgroundColor="DarkGoldenrod"/>
        <views:NewsPage Title="Entertainment" BackgroundColor="ForestGreen"/>
        <views:NewsPage Title="General" BackgroundColor="Violet"/>
        <views:NewsPage Title="Health" BackgroundColor="AliceBlue"/>
        <views:NewsPage Title="Sports" BackgroundColor="OrangeRed"/>
        <views:NewsPage Title="Science" BackgroundColor="LightGray"/>
        <views:NewsPage Title="Technology" BackgroundColor="LightSlateGray"/>
    </TabbedPage.Children>
</TabbedPage>